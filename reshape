#!/usr/bin/env bash

which mapshaper > /dev/null || npm install -g mapshaper

DEST=`pwd`
cd /tmp

URL="http://www.naturalearthdata.com/http//www.naturalearthdata.com/download/10m/cultural/ne_10m_admin_0_countries.zip"
FILE="${URL##*/}"
curl -sLOk "${URL}" -o ${FILE}
unzip -o $FILE

SHAPE=$(ls *.shp)
echo $SHAPE
mapshaper -i "${SHAPE}" -simplify 25% -o
$DEST/shp2json "${SHAPE}"

$DEST/cleangeojson

rm out.json
mv *.json $DEST